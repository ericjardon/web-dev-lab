extends ../layout 

block content
    a(href='/') Volver
    br
    h1 Inicia Sesi√≥n
    form(action='/auth/login' method='POST')
        table.table 
            tr 
                td
                    label(for='email') Email:
                td
                    input#email(required=true type='text' name='email' class=errors.email ? 'is-invalid' : '')
                    if errors.email
                        small#emailHelp.text-danger = errors.email.message
            tr 
                td
                    label(for='pwd') Password:
                td
                    input#pwd(required=true type='password' name='password' class=errors.password ? 'is-invalid' : '')
                    if errors.password
                        small#emailHelp.text-danger = errors.password.message
            tr
                td 
                td
                    input.btn(type='submit' value='Log in')
                    if errors.message  
                        br
                        small#emailHelp.text-danger=errors.message 